<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.NavigateActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Instructions:\n1- Use one finger for rotating the earth.\n2- Use two fingers for up and down to change the tilt.\n3- Use two fingers for left and right to change the heading\n4- Either move your two fingers together or separate them to in the direction of the heading."
        android:textColor="@color/material_grey"
        android:textSize="24sp"
        android:padding="8dp"
        android:layout_weight="6"/>

</LinearLayout>